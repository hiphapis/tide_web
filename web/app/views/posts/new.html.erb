<h2>Post A News</h2>

<%= semantic_form_for @post do |f| %>

  <%= f.inputs do %>
    <%= f.input :category, :include_blank => false, :label => "카테고리" %>
    <%= f.input :source_url %>

    <%= f.input :title %>
    <%= f.input :body %>
  <% end %>
  
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
  
  <%= f.hidden_field :user_id, :value => current_user.id %>
  
<% end %>
