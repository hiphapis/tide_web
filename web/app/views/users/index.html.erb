<div class="content_title">
  <div class="title">PEOPLE</div>
  <div class="more"><%= link_to "Show All >>", all_users_path %></div>
</div>

<%= render "users/search" %>


<div class="people">
  <h3>
    <div class="title">Recently Joined Members</div>
    <div class="more"><%= link_to "more >>", all_users_path %></div>
  </h3>
  <ul class="people">
    <% @recent_users.each do |user| %>
      <li>
        <%= display_user_category_icon(user) %>
        <div class="profile"><%= image_tag user.profile_image.url %></div>
        <% unless user.name_e.blank? %>
          <div class="username_e"><%= link_to user.name_e, user %></div>
        <% end %>
        <div class="username"><%= link_to user.name, user %></div>
        <%= render "connections/button", :user => user %>
      </li>
    <% end %>
  </ul>
</div>

<div class="people">
  <h3>
    <div class="title">Active Members of the Week</div>
    <div class="more"><%= link_to "more >>", all_users_path %></div>
  </h3>
  <ul class="people">
    <% @weekly_users.each do |user| %>
