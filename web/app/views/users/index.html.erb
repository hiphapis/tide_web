    <% end %>
  </ul>
</div>


<div class="sidebar">
  <%= render "shared/side_app" %>

  <div class="sb_action">
    <div><%= link_to "INVITE FRIENDS TO TIDE", invite_users_path %></div>
  </div>
</div>
